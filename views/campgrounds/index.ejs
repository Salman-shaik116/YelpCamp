<% layout('layouts/boilerplate') %>
    <link rel="stylesheet" href="/stylesheets/index.css">

    <div class="container-fluid px-0">
        <!-- Cluster Map -->
        <div id="cluster-map" class="mb-5 shadow"></div>
    </div>

    <div class="main-container my-5">
        <h1 class="text-center mb-5 fw-bold display-5">ðŸŒ² Discover Amazing Campgrounds</h1>

        <div class="card-row">
            <% for (let campground of campgrounds) { %>
                <div class="campground-card h-100">

                    <!-- Image Section -->
                    <div class="campground-img-container">
                        <% if (campground.images.length) { %>
                            <img crossorigin="anonymous" src="<%= campground.images[0].url %>"
                                alt="<%= campground.title %>" class="img-fluid">
                            <% } else { %>
                                <img crossorigin="anonymous"
                                    src="https://res.cloudinary.com/dq44wl7jd/image/upload/v1758392352/YelpCamp/h0ztyivequjm5qamacbr.jpg"
                                    alt="Default Campground" class="img-fluid">
                                <% } %>

                                    <!-- Price (optional, if available) -->
                                    <% if (campground.price) { %>
                                        <div class="price-badge">
                                            $<%= campground.price %>/night
                                        </div>
                                        <% } %>
                    </div>

                    <!-- Card Body -->
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">
                            <%= campground.title %>
                        </h5>

                        <p class="card-text flex-grow-1">
                            <%= campground.description.length> 90
                                ? campground.description.substring(0, 90) + "..."
                                : campground.description %>
                        </p>

                        <p class="camp-location">
                            <i class="bi bi-geo-alt-fill"></i>
                            <%= campground.location %>
                        </p>

                        <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary mt-auto">
                            View Details
                        </a>
                    </div>
                </div>
                <% } %>
        </div>
    </div>

    <!-- Scripts -->
    <script>
        const maptilerApiKey = '<%- process.env.MAPTILER_API_KEY %>';
        const campgrounds = { features: <%- JSON.stringify(campgrounds) %> }
    </script>
    <script src="/javascripts/clusterMap.js"></script>