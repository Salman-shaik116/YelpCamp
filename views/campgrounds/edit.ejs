<% layout('layouts/boilerplate') %>
    <% block('styles').append('<link rel="stylesheet" href="/stylesheets/edit.css">') %>

        <section class="edit-wrapper py-5">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-xl-8 col-lg-9">
                        <div class="card edit-card shadow-lg border-0">
                            <div class="card-body p-4 p-md-5">
                                <div
                                    class="d-flex flex-column flex-md-row justify-content-between align-items-md-center gap-3 mb-4">
                                    <div>
                                        <h1 class="edit-title mb-2">Edit Campground</h1>
                                        <p class="edit-subtitle mb-0 text-muted">Update the details and save your
                                            changes.</p>
                                    </div>
                                    <a href="/campgrounds/<%= campground._id %>" class="btn btn-outline-light">
                                        &larr; Back to campground
                                    </a>
                                </div>

                                <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST"
                                    enctype="multipart/form-data" class="edit-form needs-validation" novalidate>

                                    <div class="mb-3">
                                        <label class="form-label" for="title">Title</label>
                                        <input class="form-control" type="text" id="title" name="campground[title]"
                                            value="<%= campground.title %>" required>
                                        <div class="valid-feedback">Looks good!</div>
                                    </div>

                                    <div class="mb-3">
                                        <label class="form-label" for="location">Location</label>
                                        <input class="form-control" type="text" id="location"
                                            name="campground[location]" value="<%= campground.location %>" required>
                                        <div class="valid-feedback">Looks good!</div>
                                    </div>

                                    <div class="mb-3">
                                        <label class="form-label" for="price">Campground Price</label>
                                        <div class="input-group">
                                            <span class="input-group-text" id="price-label">$</span>
                                            <input type="text" class="form-control" id="price" placeholder="0.00"
                                                aria-label="price" aria-describedby="price-label"
                                                name="campground[price]" value="<%= campground.price %>" required>
                                        </div>
                                    </div>

                                    <div class="mb-4">
                                        <label class="form-label" for="description">Description</label>
                                        <textarea class="form-control" id="description" name="campground[description]"
                                            rows="5" required><%= campground.description %></textarea>
                                    </div>

                                    <div class="mb-4">
                                        <label class="form-label d-block">Add more image(s)</label>

                                        <!-- Hidden native input -->
                                        <input type="file" id="images" name="image" class="visually-hidden" multiple>

                                        <!-- Fancy trigger -->
                                        <label for="images" class="btn fancy-file-btn">
                                            <span class="fancy-file-icon" aria-hidden="true">⬆️</span>
                                            Choose files
                                        </label>

                                        <div id="imagesHelp" class="form-text file-hint">No files selected.</div>
                                    </div>

                                    <div class="mb-4">
                                        <label class="form-label d-block">Existing images</label>
                                        <div class="row g-3">
                                            <% campground.images.forEach(function(img, i) { %>
                                                <div class="col-6 col-md-4 col-lg-3">
                                                    <img src="<%= img.thumbnail || img.url %>"
                                                        class="img-fluid rounded mb-2" alt="Campground image">
                                                    <div class="form-check">
                                                        <input class="form-check-input" type="checkbox"
                                                            id="image-<%= i %>" name="deleteImages[]"
                                                            value="<%= img.filename %>">
                                                        <label class="form-check-label"
                                                            for="image-<%= i %>">Delete</label>
                                                    </div>
                                                </div>
                                                <% }) %>
                                        </div>
                                    </div>

                                    <div class="d-grid">
                                        <button class="btn btn-primary" type="submit">Save changes</button>
                                    </div>
                                </form>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <script>
            // Show selected filenames/count for the fancy file button
            (function () {
                const input = document.getElementById('images');
                const hint = document.getElementById('imagesHelp');
                if (input && hint) {
                    input.addEventListener('change', () => {
                        if (!input.files || input.files.length === 0) {
                            hint.textContent = 'No files selected.';
                        } else if (input.files.length === 1) {
                            hint.textContent = input.files[0].name;
                        } else {
                            hint.textContent = `${input.files.length} files selected`;
                        }
                    });
                }
            })();
        </script>